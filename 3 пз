using System;

namespace AbsoluteValueFunction
{
    class Program
    {
        static void Main(string[] args)
        {
            double h = 0.5;

            Console.WriteLine("x    |    y=|x|");
            Console.WriteLine("--------------");

            for (double x = -4; x <= 4; x += h)
            {
                double y = Math.Abs(x);
                Console.WriteLine($"{x}    |    {y}");
            }
        }
    }
}
